APP_NAME=foobar
APP_ENV=production
# APP_KEY=parameter_store
APP_DEBUG=false
APP_URL=https://smatsuoka.click
APP_TIMEZONE=Asia/Tokyo

APP_LOCALE=ja
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=ja_JP

LOG_CHANNEL=stderr
LOG_LEVEL=info

DB_CONNECTION=mysql
DB_HOST=db.smatsuoka.click
DB_PORT=3306
DB_DATABASE=foobar
DB_USERNAME=foobar
# DB_PASSWORD=parameter_store
DB_SOCKET=

SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=none
SESSION_DOMAIN=.smatsuoka.click

REDIS_CLIENT=phpredis
REDIS_HOST=cache.smatsuoka.click
REDIS_PASSWORD=null
REDIS_PORT=6379

CACHE_STORE=redis
QUEUE_CONNECTION=database

# Firebase Authentication
FIREBASE_CREDENTIALS=/var/www/storage/app/firebase/firebase-adminsdk.json

# CORS設定 (本番環境用)
CORS_ALLOWED_ORIGINS=https://smatsuoka.click,https://app.smatsuoka.click

# フロントエンドURL
FRONTEND_URL=https://app.smatsuoka.click
